<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".StormCountFragment">

    <Button
        android:id="@+id/btnPlusSwamp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toStartOf="@id/ivSwamp"
        android:text="+">
    </Button>

    <ImageView
        android:id="@+id/ivSwamp"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/swamp_pixel_art"
        app:layout_constraintStart_toEndOf="@id/btnPlusSwamp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toStartOf="@id/btnMinusSwamp">
    </ImageView>

    <Button
        android:id="@+id/btnMinusSwamp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/ivSwamp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toStartOf="@id/tvManaSwamp"
        android:text="-">
    </Button>

    <TextView
        android:id="@+id/tvManaSwamp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/btnMinusSwamp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="0"
        android:textSize="60sp">
    </TextView>

</androidx.constraintlayout.widget.ConstraintLayout>